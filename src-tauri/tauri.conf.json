{
  "build": {
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../build",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Source Modding Search Tool",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": false,
        "sidecar": false,
        "open": "^.*$" 
      },
      "dialog": {
        "all": true,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "readDir": true,
        "scope": [
          "$HOME/**",
          "$DESKTOP/**",
          "$DOWNLOADS/**",
          "**"
        ]
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      },
      "protocol": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon.ico"
      ],
      "identifier": "com.sourcemodding.searchtool",
      "longDescription": "",
      "macOS": {},
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {}
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Source Modding Search Tool",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "fileDropEnabled": true
      }
    ]
  }
}